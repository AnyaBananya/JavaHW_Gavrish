<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import java.net.URL?>
<GridPane fx:controller="level2.homeWork4.sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <stylesheets>
        <URL value="@/level2/homeWork4/css/style.css"/>
    </stylesheets>

    <Button fx:id="btnHello" text="hello" onAction="#onClickBtnHello" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <Button text="btn2" onAction="#onClickBtnHello" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    <Button text="btn3" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <Button text="send from textField" onAction="#onClickBtnSend" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <TextArea fx:id="textArea" GridPane.rowIndex="2" GridPane.columnIndex="0"
    prefWidth="200"/>
    <TextField fx:id="textField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

</GridPane>
